{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"correctness": {
				"noUndeclaredVariables": "off"
			}
		}
	},
	"formatter": {
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"files": {
		"ignore": ["node_modules", "main.tsx", "README.md"]
	}
}
